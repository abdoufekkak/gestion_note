<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost/gestion_notes?characterEncoding=utf8</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hbm2ddl.auto">update</property>
        <mapping class="BEANS.Compte"/>
        <mapping class="BEANS.Professuer"/>
         <mapping class="BEANS.Element"/>
         <mapping class="BEANS.Etudiant"/>
          <mapping class="BEANS.Admin"/>
           <mapping class="BEANS.Filiere"/>
           <mapping class="BEANS.Modulee"/>
            <mapping class="BEANS.Note"/>
                <mapping class="BEANS.Semestre"/>
                   <mapping class="BEANS.Modalite"/>
               
        
    </session-factory>
</hibernate-configuration>

